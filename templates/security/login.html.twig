{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="card mx-auto shadow p-4" style="max-width: 500px; border-top: 4px solid #C62828; background-color: #fdfdfd;">
    <h2 class="text-center mb-4" style="color: #C62828;">Connexion à Stubborn Shop</h2>

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form method="post">
        <div class="mb-3">
            <label for="inputEmail" class="form-label" style="color: #000000;">Adresse email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control border-0 shadow-sm" required autofocus>
        </div>

        <div class="mb-3">
            <label for="inputPassword" class="form-label" style="color: #000000;">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control border-0 shadow-sm" required>
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" name="_remember_me" class="form-check-input" id="remember_me">
            <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="btn w-100 text-white" style="background-color: #C62828;">Se connecter</button>
    </form>
        <div class="mt-3 text-center">
        <span>Pas encore de compte ?</span>
        <a href="{{ path('app_register') }}">Créer un compte</a>
    </div>
</div>
{% endblock %}
